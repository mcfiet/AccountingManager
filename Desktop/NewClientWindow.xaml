<Window x:Class="De.HsFlensburg.ClientApp078.Ui.Desktop.NewClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:De.HsFlensburg.ClientApp078.Ui.Desktop"
        xmlns:viewModels="clr-namespace:De.HsFlensburg.ClientApp078.Logic.Ui.ViewModels;assembly=Logic.Ui"
        mc:Ignorable="d"
        Title="NewClientWindow" Height="200
        " Width="400">
    <Window.DataContext>
        <Binding Source="{StaticResource ViewModelLocator}" Path="TheNewClientWindowViewModel"></Binding>
    </Window.DataContext>
    <Grid>
        <UniformGrid Grid.Column="0" Columns="2">
            <Label VerticalAlignment="Center" HorizontalAlignment="Right">Identifier</Label>
            <TextBox Text="{Binding Identifier}" VerticalAlignment="Center"></TextBox>
            <Label VerticalAlignment="Center" HorizontalAlignment="Right">Name</Label>
            <TextBox Text="{Binding Name}" VerticalAlignment="Center"></TextBox>
            <Button Command="{Binding AddClient}">Kunde hinzufügen</Button>
        </UniformGrid>
    </Grid>
</Window>
