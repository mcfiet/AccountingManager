<Window x:Class="De.HsFlensburg.ClientApp078.Ui.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:De.HsFlensburg.ClientApp078.Ui.Desktop"
        xmlns:viewModel="clr-namespace:De.HsFlensburg.ClientApp078.Logic.Ui.Wrapper;assembly=Logic.Ui"
        xmlns:viewModels="clr-namespace:De.HsFlensburg.ClientApp078.Logic.Ui.ViewModels;assembly=Logic.Ui"
        mc:Ignorable="d"
        Title="MainWindow" Height="120" Width="500">
    <Window.DataContext>
        <Binding Source="{StaticResource ViewModelLocator}" Path="TheMainWindowViewModel"></Binding>
    </Window.DataContext>
    <Window.IsEnabled >
        <Binding Source = "{StaticResource MessageListener}" Path ="BindableProperty"></Binding>
    </Window.IsEnabled >

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
    <UniformGrid Grid.Column="0" Columns="2">
        <Label VerticalAlignment="Center" 
               HorizontalAlignment="Right">
            Identifier
        </Label>
            <TextBox VerticalAlignment="Center" 
                 Text="{Binding ElementName=myDataGrid, Path=SelectedItem.Id}">
            </TextBox>
        <Label VerticalAlignment="Center" 
               HorizontalAlignment="Right">
            Name
        </Label>
            <TextBox VerticalAlignment="Center" 
                     Text="{Binding ElementName=myDataGrid, Path=SelectedItem.Name}">
            </TextBox>
            <Button Command="{Binding OpenNewArticleWindowCommand, Mode=OneWay}">Open New Article Window</Button>
            <Button Grid.Column="0" Command="{Binding OpenNewClientWindowCommand, Mode=OneWay}">Open New Client Window</Button>
            <Button Command="{Binding SaveCommand}">Save</Button>
            <Button Command="{Binding LoadCommand}">Load</Button>

        </UniformGrid>
        <DataGrid Grid.Column="1" 
                  Name ="myDataGrid"
                  ItemsSource="{Binding Path = MyList}">
        </DataGrid>
    </Grid>
</Window>
